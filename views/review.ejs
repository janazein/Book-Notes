<%- include('partials/header.ejs') %>

<div class="book-detail-container">
  <div class="book-detail-card">
    <div class="book-cover">
      <% if (book.isbn) { %>
        <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" alt="Cover of <%= book.title %>">
      <% } else if (book.cover_url) { %>
        <img src="<%= book.cover_url %>" alt="Cover of <%= book.title %>">
      <% } else { %>
        <img src="/placeholder.jpg" alt="No cover available">
      <% } %>
    </div>
    <div class="book-info">
      <h2><%= book.title %></h2>
      <h3><%= book.author %></h3>
      <p class="desc"><%= book.read_date ? new Date(book.read_date).toDateString() : "N/A" %></p>
      <p class="desc"><%= book.rating %> /10</p>
      <h4>Notes About the Book</h4>
      <p><%= book.review || "No review written yet." %></p>
      <div class="actions">
        <a href="/edit/<%= book.id %>" class="scndbtn" style="padding: 12px 37px;">Edit</a>
        <a href="/" class="btn" style="margin-left: 15px;">Back to Library</a>
      </div>
    </div>
  </div>
</div>


<%- include('partials/footer.ejs') %>